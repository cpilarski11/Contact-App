<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cameronpilarski.contactssqlite">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/contact"
        android:label="@string/app_name"
        android:roundIcon="@drawable/contact"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".HomeActivity"> </activity>
        <activity android:name=".AddContactActivity"> </activity>
        <activity android:name=".ContactActivity"> </activity>
        <activity android:name=".FullScreenActivity"> </activity>
        <activity android:name=".EditContactActivity"> </activity>
    </application>

</manifest>